{
    "extends": [
        "airbnb"
    ],
    "overrides": [
    ],
    "parserOptions": {
        // "ecmaVersion": "latest",
        // "sourceType": "module"
    },
    
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never"
            }
        ],
        "react/react-in-jsx-scope": "off",
        "global-require": "off",
        "import/prefer-default-export": "off",
        "no-unused-expressions": ["error", { "allowTaggedTemplates": true }]
    }
}
